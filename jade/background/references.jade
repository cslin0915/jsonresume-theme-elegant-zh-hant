unless _.isEmpty(resume.references)
  .detail#references
    .icon
      i.fs-lg.icon-thumbs-up
      span.mobile-title 推薦人

    .info
      h4.title.text-uppercase 推薦人

      .content
        ul.list-unstyled
          - each reference_info in resume.references
            li.card.card-nested
              if reference_info.website
                a(href=reference_info.website, target="_blank")= reference_info.name
              else
                |#{reference_info.name}

              blockquote.quote
                p.clear-margin= reference_info.reference
